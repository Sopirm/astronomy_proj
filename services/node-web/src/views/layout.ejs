        const defaultOptions = {
          year: 'numeric',
          month: 'short', 
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        };
        return new Intl.DateTimeFormat('ru-RU', { ...defaultOptions, ...options })
          .format(new Date(dateStr));
      }
    };

